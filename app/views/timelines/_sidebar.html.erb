<div class="sidebar">
  <div class="box">
    <div class="title">
      <h3><%= t(:tag, :scope => [:railties]) %> </h3>
    </div>
    <div class="body">
      <% tag_cloud @tags, tag_cloud_styles() do |tag, css_class| %>
      <%= link_to h(tag.name), { :action => params["action"], :tag => tag.name }, :class => css_class %>
      <% end %>
    </div>
  </div>

  <%= google_adsense %>
</div>
