<p>
  <b><%=h Reminder.human_attribute_name('title') %>:</b>
  <%=h @reminder.title %>
</p>

<p>
  <b><%=h Reminder.human_attribute_name('tag_list') %>:</b>
  <%=h @reminder.tag_list %>
</p>

<p>
  <b><%=h Reminder.human_attribute_name('body') %></b>
<pre>
<%=h @reminder.body %>
</pre>
</p>

<p>
  <b><%=h Reminder.human_attribute_name('next_learn_date') %>:</b>
  <%=h display_date(@reminder.next_learn_date) %>
</p>

<p>
  <b><%=h Reminder.human_attribute_name('learned_at') %>:</b>
  <%=h display_date(@reminder.learned_at) %>
</p>

<table><tr>
    <% if current_user? %>
    <td>
      <span id="reminders_check_<%= @reminder.id -%>">
	<%= button_to_remote t(:check, :scope => [:railties, :scaffold]), 
	:url => action_path(:check, :id => @reminder.id) if @reminder.today_remind? -%>
      </span>
    </td>
    <td>
      <%= button_to translate(:edit, :scope => [:railties, :scaffold]), action_path(:edit, :id => @reminder.id) %>
    <% end %>
    </td>
    <td>
      <%= button_to translate(:listing, :scope => [:railties, :scaffold]), action_path(:index) %>
    </td>
</tr></table>
