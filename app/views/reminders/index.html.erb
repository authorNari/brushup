<h1><%= translate(:listing, :default => "Listing {{model}}", :model => Reminder.human_name(:count => @reminders.size), :count => @reminders.size, :scope => [:railties, :scaffold]) %></h1>

<table>
  <tr>
    <th><%= Reminder.human_attribute_name('title') %></th>
    <th><%= Reminder.human_attribute_name('body') %></th>
  </tr>

<% for reminder in @reminders %>
  <tr>
    <td><%=h reminder.title %></td>
    <td><%=h reminder.body %></td>
    <td><%= link_to translate(:show, :default => 'Show', :scope => [:railties, :scaffold]), reminder %></td>
    <td><%= link_to translate(:edit, :default => 'Edit', :scope => [:railties, :scaffold]), edit_reminder_path(reminder) %></td>
    <td><%= link_to translate(:destroy, :default => 'Destroy', :scope => [:railties, :scaffold]), reminder, :confirm => translate(:confirmation, :default => 'Are you sure?', :scope => [:railties, :scaffold]), :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to translate(:new, :default => "New {{model}}", :model => Reminder.human_name, :scope => [:railties, :scaffold]), new_reminder_path %>
