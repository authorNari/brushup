<% @reminder ||= Reminder.new %>
<div class="sidebar">
  <% if current_user? %>
  <div class="clearness-box">
    <%= button_to(t(:new, :model => Reminder.human_name, :scope => [:railties, :scaffold]), action_path(:new)) -%>
  </div>
  <% end %>
  <div class="box">
    <% form_for @reminder, :url => action_path(params[:action], :tag => params[:tag]) do |f| %>
      <%= f.text_field :search_word, :size => 20 %>
      <%= f.submit t("railties.scaffold.search") %>
    <% end %>
  </div>
  <div class="box">
    <div class="title">
      <h3><%= t(:tag, :scope => [:railties]) %> </h3>
    </div>
    <div class="body">
      <% tag_cloud @tags, tag_cloud_styles() do |tag, css_class| %>
      <%= link_to h(tag.name), { :action => params["action"], :tag => tag.name }, :class => css_class %>
      <% end %>
    </div>
  </div>

  <%= google_adsense %>
</div>
