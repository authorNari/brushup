<div class="sidebar">
  <% if current_user? %>
  <div class="clearness-box">
    <%= button_to(t(:new, :default => "New {{model}}", :model => Reminder.human_name, :scope => [:railties, :scaffold]), action_path(:new)) -%>
  </div>
  <% end %>
  <div class="box">
    <div class="title">
      <h3><%= t(:tag, :scope => [:railties]) %> </h3>
    </div>
    <div class="body">
      <% tag_cloud @tags, tag_cloud_styles() do |tag, css_class| %>
      <%= link_to tag.name, { :action => params["action"], :tag => tag.name }, :class => css_class %>
      <% end %>
    </div>
  </div>
</div>
