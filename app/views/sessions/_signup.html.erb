<% form_tag(:controller => "sessions", :action => "create", :method => :post) do -%>
<ul>
  <li><%= link_to t("info", :scope => [:links]), info_path -%></li>
  <li>
    <label for="openid_url" >
      OpenID
    </label>
  </li>
  <li><%= text_field_tag(:openid_url, {}, :class => "openid-url", :value => "ここにOpenIDを入力してください", :style => "color:gray;", :onfocus => "Brushup.clearInputValue($(this))") -%></li>
  <li><%= submit_tag(t("login", :scope => [:links])) -%></li>
</ul>
<% end -%>
