<ul>
<% form_tag(:controller => "sessions", :action => "create", :method => :post) do -%>
  <li><%= link_to t("info", :scope => [:links]), info_path -%></li>
  <li><%= link_to t(:timelines, :scope => :links), :controller => "timelines"  -%></li>
  <% if logged_in? -%>
    <li><%= link_to(t(:user_reminders, :scope => :text, :user => h(current_user.login)), action_path(:index, :user => current_user.login)) -%></li>
    <li><%= link_to t(:edit, :scope => [:controller, :sessions]), :user => current_user.login, :action => :edit, :controller => :sessions -%></li>
    <li><%= link_to t("logout", :scope => [:links]), logout_path -%></li>
  <% else -%>
    <li>
      <label for="openid_url" >
        OpenID
      </label>
    </li>
    <li><%= text_field_tag(:openid_url, {}, :class => "openid-url", :value => t(:please_input_openid, :scope => :text), :style => "color:gray;", :onfocus => "Brushup.clearInputValue($(this))") -%></li>
    <li><%= submit_tag(t("login", :scope => [:links])) -%></li>
  <% end -%>
<% end -%>
</ul>
